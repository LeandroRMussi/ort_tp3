@model WebApplication1.PerfilUsuario
@{
    ViewBag.Title = "Registro";
}
<h2>Registro</h2>
<br />
<div class="form-group">
    @Html.ValidationSummary(false, "", new { @class = "text-white" })
</div>
@using (Html.BeginForm("Registro", "Home", FormMethod.Post))
{
    <form>
        <div class="form-group">
            <label for="usuario">Usuario</label>
            @Html.TextBoxFor(newUser => newUser.Usuario, new { @class = "form-control", @required = "required", value = "", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            @Html.PasswordFor(newUser => newUser.Password, new { @class = "form-control", @required = "required", value = "", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            @Html.TextBoxFor(newUser => newUser.Email, new { @class = "form-control", @required = "required", type = "email", placeholder = "Email:", value = "", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label class="checkbox-inline"><input type="checkbox" required value="terminos" id="terminos" data-toggle="modal" data-target="#myModal">Aceptar terminos y condiciones</label>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary ">Enviar</button>
        </div>
    </form>
}
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="color: black">Terminos y condiciones</h5>
            </div>
            <div class="modal-body">
                <p style="color: black">Restaurante se reserva el derecho a modificar la oferta comercial presentada en el website (modificaciones sobre productos, precios, promociones y otras condiciones comerciales y de servicio) en cualquier momento y sin previo aviso. La entidad no garantiza el buen funcionamiento del sitio web en ningún caso. Hacemos todo los esfuerzos para ofrecer la información contenida en el website de forma veraz y sin errores.  </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>
