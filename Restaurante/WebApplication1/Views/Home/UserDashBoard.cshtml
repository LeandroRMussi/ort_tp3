@using WebApplication1.Models
@{
    ViewBag.Title = "Seleccion de mesa";
}

<div style="text-align:center">
    <h1>Reserva</h1>
    <br />
    <h4>Usuario: @Session["Usuario"].ToString() </h4>
    @if (@Session["isActive"].ToString().AsBool())
    {
        <h4>Estado: Activo</h4>
    }
    else
    {
        <h4>Estado: Desactivado</h4>
    }
    <h4>Correo electronico: @Session["Email"].ToString()</h4>
    <div>
        <h4>Cantidad de comensales: @Session["Comensales"]</h4>
        <h4>Fecha: @Session["Fecha"].ToString().Substring(0, 10)</h4>
        <h4>Hora de inicio: @Session["Horainicio"].ToString().Substring(0, 5)</h4>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-md-2">
        @using (Html.BeginForm("Confirm", "Home", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Aceptar" class="btn btn-success" />
        }
    </div>
    <div class="col-md-2">
        @using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Cancelar" class="btn btn-danger" />
        }
    </div>
</div>
